{
  "exclude": ["./tests/", "./node_modules/", "./dist/", "./tools/"],
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "types": ["mocha", "node"],
    "strict": true,
    "lib": ["es2019", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false
  }
}
